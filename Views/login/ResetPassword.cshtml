@model EasyCode.Models.Auth.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["NoContainer"] = true;
}

@section Styles {
  <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}

@section Scripts {
  @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="auth-wrapper">
  <div class="auth-box" style="max-width: 520px;">
    <div class="form-side form-signin" style="width: 100%;">
      <form asp-controller="Login" asp-action="ResetPassword" method="post">
        @Html.AntiForgeryToken()
        <h2>Reset password</h2>

        @if (Model?.Submitted == true)
        {
          <p>Your password has been updated. You can login now.</p>
          <button href="@Url.Action("Index", "Login")">Login</button>
        }
        else
        {
          <span>Set a new password for your account</span>
          <div asp-validation-summary="ModelOnly"></div>

          <input asp-for="Email" type="email" placeholder="Email" />
          <span asp-validation-for="Email"></span>

          <input asp-for="NewPassword" type="password" placeholder="New password" />
          <span asp-validation-for="NewPassword"></span>

          <input asp-for="ConfirmPassword" type="password" placeholder="Confirm new password" />
          <span asp-validation-for="ConfirmPassword"></span>

          <input asp-for="Token" type="hidden" />

          <button type="submit">Update password</button>
          <div style="margin-top: 12px;">
            <a href="@Url.Action("Index", "Login")">Back to Login</a>
          </div>
        }
      </form>
    </div>
  </div>
</div>
