@model EasyCode.Models.Auth.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["NoContainer"] = true;
}

@section Styles {
  <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}

@section Scripts {
  @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="auth-wrapper">
  <div class="auth-box" style="max-width: 520px;">
    <div class="form-side form-signin" style="width: 100%;">
      <form asp-controller="Login" asp-action="ForgotPassword" method="post">
        @Html.AntiForgeryToken()
        <h2>Forgot your password?</h2>

        @if (Model?.Submitted == true)
        {
          <p>If an account exists for that email, you can reset your password now.</p>
          <a href="@Url.Action("Index", "Login")">Back to Login</a>
        }
        else
        {
          <span>Enter your email to receive reset instructions</span>
          <div asp-validation-summary="ModelOnly"></div>

          <input asp-for="Email" type="email" placeholder="Email" />
          <span asp-validation-for="Email"></span>

          <button type="submit">Send</button>
          <div style="margin-top: 12px;">
            <a href="@Url.Action("Index", "Login")">Back to Login</a>
          </div>
        }
      </form>
    </div>
  </div>
</div>
