    function saveCompletedCssCode(sectionId, exerciseIndex, html, css) {
      try {
        const key = `completed_code_${sectionId}-${exerciseIndex}`;
        localStorage.setItem(key, JSON.stringify({ html: html || '', css: css || '' }));
      } catch (e) {}
    }

    function loadCompletedCssCode(sectionId, exerciseIndex) {
      try {
        const key = `completed_code_${sectionId}-${exerciseIndex}`;
        const data = localStorage.getItem(key);
        return data ? JSON.parse(data) : null;
      } catch (e) { return null; }
    }

    function restoreCompletedCssCodes() {
      const completed = JSON.parse(localStorage.getItem('css_progress_list')) || [];
      completed.forEach(key => {
        const [sectionId, exerciseIndex] = key.split('-');
        const htmlTextareaId = `grade-html-${sectionId}-${exerciseIndex}`;
        const cssTextareaId = `grade-css-${sectionId}-${exerciseIndex}`;
        const htmlTextarea = document.getElementById(htmlTextareaId);
        const cssTextarea = document.getElementById(cssTextareaId);
        
        if (htmlTextarea && cssTextarea) {
          const code = loadCompletedCssCode(sectionId, exerciseIndex);
          if (code) {
            htmlTextarea.value = code.html || '';
            cssTextarea.value = code.css || '';
          }
        }
      });
    }

    function markComplete(sectionId, exerciseIndex, btnElement) {
      let completed = JSON.parse(localStorage.getItem('css_progress_list')) || [];
      const key = `${sectionId}-${exerciseIndex}`;
      if (!completed.includes(key)) {
        completed.push(key);
        localStorage.setItem('css_progress_list', JSON.stringify(completed));
      }
      updateCssButtonState(btnElement, true);
      calculateCssProgress(completed);
    }

    function updateCssButtonState(btn, isDone) {
      if (isDone && btn) {
        btn.classList.add('done');
      }
    }

    function loadCssProgress() {
      let completed = JSON.parse(localStorage.getItem('css_progress_list')) || [];
      calculateCssProgress(completed);

      const allButtons = document.querySelectorAll('.btn-finish');
      allButtons.forEach(btn => {
        const onclickText = btn.getAttribute('onclick');
        for (const section in cssSectionConfig) {
          for (let i = 1; i <= cssSectionConfig[section]; i++) {
            if (onclickText && onclickText.includes(`'${section}', ${i}`)) {
              if (completed.includes(`${section}-${i}`)) {
                updateCssButtonState(btn, true);
              }
            }
          }
        }
      });
    }

    function calculateCssProgress(completedList) {
      const percent = Math.round((completedList.length / cssTotalExercises) * 100);
      const barFill = document.getElementById('progress-bar-fill');
      const barText = document.getElementById('progress-percent');
      if (barFill) barFill.style.width = percent + '%';
      if (barText) barText.innerText = percent + '%';

      for (const [section, count] of Object.entries(cssSectionConfig)) {
        let finishedCount = 0;
        for (let i = 1; i <= count; i++) {
          if (completedList.includes(`${section}-${i}`)) finishedCount++;
        }
        const sectionPercent = Math.round((finishedCount / count) * 100);
        const menuText = document.getElementById(`menu-prog-${section}`);
        if (menuText) {
          menuText.innerText = `(${sectionPercent}%)`;
          menuText.style.color = sectionPercent === 100 ? '#04AA6D' : '#d32f2f';
        }

        if (finishedCount === count && count > 0) {
          const link = document.getElementById(`link-${section}`);
          if (link) {
            link.classList.add('menu-completed');
            const icon = link.querySelector('.check-icon');
            if (icon) icon.style.display = 'inline-block';
          }
        }
      }
    }
  </script>
